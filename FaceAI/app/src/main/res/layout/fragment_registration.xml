<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/colorDaffofil"
                                             tools:context=".RegistrationFragment">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="415dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:id="@+id/constraintLayout"
                                                 android:background="@color/colorGrey"
                                                 app:layout_constraintVertical_bias="0.0">
        <android.support.v7.widget.CardView
                android:id="@+id/cardChat"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:elevation="12dp"
                app:cardCornerRadius="40dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.47000003">

            <ImageView
                    android:id="@+id/imageChat"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/cardChat"
                    tools:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <Button

                android:background="@drawable/ic_photo_camera_black_24dp"
                android:textColor="@color/colorDaffofil"
                android:layout_width="64dp"
                android:layout_height="59dp"
                android:textSize="20sp"
                android:id="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.976" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardChat" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>


    <CheckBox
            android:text="Male"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/checkBox" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="Female"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:id="@+id/checkBox2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.259" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.005"/>
    <CheckBox
            android:text="Male"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/checkBox3"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/checkBox4" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.17" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:text="Female"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/checkBox4"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <CheckBox
            android:text="Both"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/checkBox5" app:layout_constraintStart_toEndOf="@+id/checkBox4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.541" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="I am: "
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"

            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.055" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintVertical_bias="0.087"/>
    <TextView
            android:text="Who are you looking for:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.177" app:layout_constraintHorizontal_bias="0.046"/>
    <Button
            android:text="Proceed"
            android:padding="8dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorDaffofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBox4"
            tools:ignore="RtlSymmetry" app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>